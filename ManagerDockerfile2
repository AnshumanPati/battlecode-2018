FROM docker:18.01.0-ce-rc1-dind

# Install Python3
RUN apk add --update --no-cache \
    build-base libffi-dev \
    python3-dev && \
    python3 -m ensurepip && \
    rm -r /usr/lib/python*/ensurepip && \
    pip3 install --upgrade pip setuptools && \
    rm -r /root/.cache

# Install necessary python libs
RUN pip3 install \
    tqdm docker boto3 werkzeug \
    ujson cffi

ADD ./docker-artifacts/python/battlecode /usr/lib/python3.6/battlecode
COPY ./docker-artifacts/battlebaby-py3.tar /images/battlebaby-py3.tar
#COPY ./docker-artifacts/battlebaby-java.tar /images/battlebaby-java.tar

ADD battlecode-manager /battlecode/battlecode-manager
WORKDIR /battlecode/battlecode-manager

#CMD ["sh", "start_docker.sh"]
